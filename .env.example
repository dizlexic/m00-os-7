# m00-os-7 Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# Application Settings
# ============================================

# Application name (displayed in UI)
NUXT_PUBLIC_APP_NAME=m00-os-7

# Application version
NUXT_PUBLIC_APP_VERSION=0.1.0

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# Server Settings
# ============================================

# Host to bind the server to
NUXT_HOST=localhost

# Port to run the server on
NUXT_PORT=3000

# ============================================
# Security Settings
# ============================================

# Secret key for session encryption (generate a random string)
# Use: openssl rand -base64 32
NUXT_SECRET_KEY=your-secret-key-here

# Session cookie name
NUXT_SESSION_NAME=m00-os-7-session

# Session expiry in seconds (default: 7 days)
NUXT_SESSION_EXPIRY=604800

# ============================================
# Database Settings
# ============================================

# Database type (sqlite, postgresql)
NUXT_DB_TYPE=sqlite

# SQLite database path (relative to project root)
NUXT_DB_PATH=./data/m00-os-7.db

# PostgreSQL connection (if using PostgreSQL)
# NUXT_DB_HOST=localhost
# NUXT_DB_PORT=5432
# NUXT_DB_NAME=m00_os_7
# NUXT_DB_USER=postgres
# NUXT_DB_PASSWORD=your-password-here

# ============================================
# Feature Flags
# ============================================

# Enable/disable features (true/false)
NUXT_FEATURE_CHAT=true
NUXT_FEATURE_GAMES=true
NUXT_FEATURE_BROWSER=false

# ============================================
# WebSocket Settings (for Chat)
# ============================================

# WebSocket server port (if different from main server)
# NUXT_WS_PORT=3001

# ============================================
# Development Settings
# ============================================

# Enable Vue devtools
NUXT_DEVTOOLS=true

# Enable debug logging
NUXT_DEBUG=false
